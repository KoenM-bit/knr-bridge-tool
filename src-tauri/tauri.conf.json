{
  "package": {
    "productName": "KNR Bridge",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../frontend",
    "distDir": "../frontend"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.knr.bridge",
      "targets": ["app", "dmg"],
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "resources": [".env"],
      "category": "DeveloperTool",
      "copyright": "Â© 2025 KNR Bridge Tool",
      "macOS": {
        "minimumSystemVersion": "10.13",
        "license": ""
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icon.png"
    },
    "windows": [
      {
        "title": "KNR Bridge",
        "width": 420,
        "height": 260,
        "resizable": false,
        "visible": false
      }
    ]
  }
}